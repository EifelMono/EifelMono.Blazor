@page "/"

<h1>Hello, Flow!</h1>

<Debug>
    <FlowError Show="true" ThrowOnException="false"></FlowError>
</Debug>

<div>
    <Debug>Hello Debug</Debug>
</div>

<div>
    <Release>Hello Release</Release>
</div>

@if (true)
{
    <div>if value is true</div>
}


<If Value="true">
    <div>if value is true</div>
</If>



<If Value="false">
    <div>if value is false</div>
</If>

<IfNot Value="false">
    <div>ifNot value is false</div>
</IfNot>

<IfThen>
    <div>IfThenElse Value is true</div>
</IfThen>

<IfThenElse Value="true">
    <IfThen>
        <div>IfThenElse Value is true</div>
    </IfThen>
    <IfElse>
        <div>{IfElse if value is true</div>
    </IfElse>
</IfThenElse>

<IfThenElse Value="false">
    <IfThen>
        <div>IfThenElse if Value is false</div>
    </IfThen>
    <IfElse>
        <div>IfElse if Value is false</div>
    </IfElse>
</IfThenElse>

@if (false)
{
    <div>IfThenElse if Value is false</div>
}
else
{
    <div>IfElse if Value is false</div>
}

@switch (DateTime.Now.DayOfWeek)
{
    case DayOfWeek.Monday:
        {
            <div>Monday</div>
            break;
        }
    case DayOfWeek.Sunday:
        {
            <div>Sunday</div>
            break;
        }
}

<Switch Value="DateTime.Now.DayOfWeek">
    <Case Value="DayOfWeek.Monday">
        Monday
    </Case>
    <Case Value="DayOfWeek.Sunday">
        Sunday
    </Case>
    <Case Value="DateTime.Now">
        Sunday
    </Case>
</Switch>



<div>
    Welcome to your new app.
</div>


