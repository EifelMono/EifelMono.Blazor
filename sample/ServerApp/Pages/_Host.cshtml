@page "/"
@namespace ServerApp.Pages
@using EifelMono.Blazor.Core
@using Microsoft.JSInterop
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@inject IJSRuntime JsRuntime


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ServerApp</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />

    @Html.EifelMonoHostHtmlUseCss()

    @Html.EifelMonoHostHtmlUseJs()
</head>
<body>
    <app>
        @(await Html.RenderComponentAsync<App>(RenderMode.ServerPrerendered))
    </app>

    <script src="_framework/blazor.server.js"></script>

    @*<script src="_content/EifelMono.Blazor.JavaScript/SessionJsInterop.js"></script>*@
    @*<script src="SessionJsInterop.js"></script>*@

    @Html.EifelMonoHostHtmlUseJsInterop()
</body>
</html>
