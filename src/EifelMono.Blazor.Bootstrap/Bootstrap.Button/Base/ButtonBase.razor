@namespace EifelMono.Blazor.Bootstrap.Base
@inherits BootstrapComponent

@ChildContent

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public ButtonColor Color { get; set; } = ButtonColor.Primary;

    [Parameter]
    public bool IsOutLine { get; set; } = false;

    [Parameter]
    public ButtonSize Size { get; set; } = ButtonSize.Normal;

    [Parameter]
    public bool IsBlock { get; set; } = false;

    [Parameter]
    public bool IsActive { get; set; } = false;

    [Parameter]
    public bool IsDisabled { get; set; } = false;
}
