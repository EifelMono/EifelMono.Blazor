@namespace EifelMono.Blazor.Flow
@typeparam T
@implements ISwitch

<CascadingValue Value="@this">
    @ChildContent
</CascadingValue>

@code {
    [Parameter]
    public T Value { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    public bool IsCondition(object value)
        => object.Equals(Value, value);
}
