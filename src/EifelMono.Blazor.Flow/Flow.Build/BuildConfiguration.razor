@namespace EifelMono.Blazor.Flow

<If Condition="@Configuration">
    <Then>
        @Debug
    </Then>
    <Else>
        @Release
    </Else>
</If>

@code {
    public bool Configuration => Base.IsDebugBuild.Value;

    [Parameter]
    public RenderFragment Debug { get; set; }

    [Parameter]
    public RenderFragment Release { get; set; }
}
