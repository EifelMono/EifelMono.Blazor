<If Value="IsParentOk">
    <If Value="Parent.Value">
        @ChildContent
    </If>
</If>
<IfNot Value="IsParentOk">
    <FlowError>@ParentErrorMessage</FlowError>
</IfNot>

@code {
    [CascadingParameter]
    private IfThenElse Parent { get; set; }

    private bool IsParentOk => Parent is IfThenElse;
    protected string ParentErrorMessage => $"{this.GetType().Name} must exist within {nameof(IfThenElse)}";

    [Parameter]
    public RenderFragment ChildContent { get; set; }


    protected override void OnInitialized()
    {
        if (!IsParentOk && FlowError.s_throwOnException)
            throw new ArgumentException(nameof(Parent), ParentErrorMessage);
        base.OnInitialized();
    }
}
